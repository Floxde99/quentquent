/* Button Component */
.btn {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--radius-md, 10px);
  font-size: 1rem;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.2s ease;
}

.btn--primary {
  background: var(--color-primary, #6366f1);
  color: white;
}

.btn--primary:hover {
  background: var(--color-primary-hover, #4f46e5);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px var(--color-primary-glow, rgba(99, 102, 241, 0.25));
}

.btn--secondary {
  background: var(--color-bg-elevated, #1a1a1a);
  color: var(--color-text, #fff);
  border: 1px solid var(--color-border, rgba(255,255,255,0.08));
}

.btn--secondary:hover {
  background: var(--color-bg-hover, #252525);
  border-color: var(--color-primary, #6366f1);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Grid Component */
.grid {
  display: grid;
  gap: 1.25rem;
  width: 100%;
}

/* ImageCard Component */
.image-card {
  display: flex;
  flex-direction: column;
  background: var(--color-surface, rgba(255,255,255,0.03));
  border: 1px solid var(--color-border, rgba(255,255,255,0.08));
  border-radius: var(--radius-lg, 16px);
  overflow: hidden;
  height: 100%;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.image-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
}

.image-card__image {
  width: 100%;
  height: 280px;
  object-fit: cover;
  display: block;
}

.image-card__image-placeholder {
  width: 100%;
  height: 280px;
  background: linear-gradient(135deg, var(--color-bg-elevated) 0%, var(--color-bg) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-subtle, #6b7280);
  font-size: 0.875rem;
}

.image-card__content {
  padding: 1rem;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.image-card__title {
  font-size: 0.95rem;
  font-weight: 600;
  margin: 0;
  line-height: 1.3;
}

.image-card__subtitle {
  font-size: 0.8rem;
  color: var(--color-text-muted, #9ca3af);
  margin: 0;
}

/* MetaGrid Component */
.meta-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 1rem;
  padding: 1.25rem;
  background: var(--color-surface, rgba(255,255,255,0.03));
  border: 1px solid var(--color-border, rgba(255,255,255,0.08));
  border-radius: var(--radius-lg, 16px);
}

.meta-grid__item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.meta-grid__label {
  font-size: 0.7rem;
  color: var(--color-text-subtle, #6b7280);
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 0.06em;
}

.meta-grid__value {
  font-size: 1rem;
  font-weight: 600;
  color: var(--color-text, #fff);
}

/* Section Component */
.section {
  margin-bottom: 2.5rem;
}

.section__title {
  font-size: 1.35rem;
  font-weight: 700;
  margin-bottom: 1.25rem;
  color: var(--color-text, #fff);
}

/* Loading State */
.state-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 1rem;
  color: var(--color-text-muted, #9ca3af);
  font-size: 1rem;
}

/* Error State */
.state-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2.5rem 1.5rem;
  background: var(--color-error-bg, rgba(239,68,68,0.1));
  border: 1px solid var(--color-error, #ef4444);
  border-radius: var(--radius-lg, 16px);
  color: var(--color-text, #fff);
  text-align: center;
  max-width: 400px;
  margin: 2rem auto;
}

.state-error p { margin: 0 0 1rem 0; }

.state-error__btn {
  padding: 0.75rem 1.5rem;
  background: var(--color-primary, #6366f1);
  color: white;
  border: none;
  border-radius: var(--radius-md, 10px);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.state-error__btn:hover {
  background: var(--color-primary-hover, #4f46e5);
  transform: translateY(-2px);
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.pagination__btn {
  min-width: 40px;
  height: 40px;
  padding: 0 0.75rem;
  background: var(--color-bg-elevated, #1a1a1a);
  border: 1px solid var(--color-border, rgba(255,255,255,0.08));
  border-radius: var(--radius-md, 10px);
  color: var(--color-text, #fff);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.pagination__btn:hover:not(:disabled) {
  background: var(--color-primary, #6366f1);
  border-color: var(--color-primary, #6366f1);
}

.pagination__btn--active {
  background: var(--color-primary, #6366f1);
  border-color: var(--color-primary, #6366f1);
}

.pagination__info {
  padding: 0 1rem;
  color: var(--color-text-muted, #9ca3af);
  font-size: 0.9rem;
}

/* Mobile */
@media (max-width: 768px) {
  .image-card__image, .image-card__image-placeholder { height: 200px; }
  .section__title { font-size: 1.15rem; }
  .meta-grid { padding: 1.25rem; background: var(--color-surface, rgba(255,255,255,0.03)); border: 1px solid var(--color-border, rgba(255,255,255,0.08)); border-radius: var(--radius-lg, 16px); }
}

@media (max-width: 480px) {
  .image-card__image, .image-card__image-placeholder { height: 160px; }
  .image-card__content { padding: 0.75rem; }
  .pagination__btn { min-width: 36px; height: 36px; font-size: 0.9rem; }
  .btn { padding: 0.6rem 1.2rem; font-size: 0.9rem; }
  .meta-grid { padding: 1.25rem; background: var(--color-surface, rgba(255,255,255,0.03)); border: 1px solid var(--color-border, rgba(255,255,255,0.08)); border-radius: var(--radius-lg, 16px); }
  .section { margin-bottom: 1.5rem; }
  .section__title { font-size: 1.1rem; margin-bottom: 1rem; }
}
